<table class="table">
  <% @orders.each do |order|%>
  <tr>
    <td><%= order.product.name %></td>
    <td><%= order.product.price %></td>
    <td><%= link_to 'Eliminar', order_path(order), method: :delete %></td>
  </tr>
  <% end %>
  <tr>
    <td> Total : </td>
    <td> <%= @orders.map {|order| order.product.price }.sum %></td>
    <td> Pagar </td>
  </tr>
</table>
